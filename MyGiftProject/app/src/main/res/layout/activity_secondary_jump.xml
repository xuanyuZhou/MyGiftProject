<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ee3d43">

        <ImageView
            android:id="@+id/secondaryJump_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:background="@mipmap/menu_action_back" />

        <TextView
            android:id="@+id/secondaryJump_titleTv"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="夏日清凉,大作战"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/secondaryJump_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="110dp"
            android:background="@mipmap/baichuan_btn_share" />
    </RelativeLayout>
    <ListView
        android:id="@+id/secondaryJump_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>