<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <WebView
        android:id="@+id/webActivity_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/webActivity_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:layout_marginStart="24dp"
            android:background="@mipmap/menu_action_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:gravity="center"
            android:text="攻略详情"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/webActivity_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="查看全集"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/webActivity_likesCount"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_action_compact_favourite_normal"
            android:gravity="center"
            android:text="3562"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/webActivity_share"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_action_compact_share"
            android:gravity="center"
            android:text="420"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/webActivity_say"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_action_compact_comment"
            android:gravity="center"
            android:text="8"
            android:textSize="15dp" />
    </LinearLayout>
</FrameLayout>