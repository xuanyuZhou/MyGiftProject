<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/startegyColumnItem_image"
            android:src="@mipmap/ic_launcher"
            android:layout_width="160dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/startegyColumnItem_title"
                android:text="如何挑选一款与自己相称的香水"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/startegyColumnItem_nikeName"
                    android:layout_margin="2dp"
                    android:textSize="10sp"
                    android:text="我是作者"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/startegyColumnItem_likesImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/state_guide_item_likes"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/startegyColumnItem_likesCount" />
                <TextView
                    android:id="@+id/startegyColumnItem_likesCount"
                    android:text="5411"
                    android:layout_alignParentRight="true"
                    android:textSize="10sp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>