<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:drawableTop="@mipmap/ic_share_wechat"
            android:gravity="center"

            android:text="微信"
            android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:drawableTop="@mipmap/ic_share_wechat_timeline"
            android:gravity="center"

            android:text="朋友圈"
            android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:drawableTop="@mipmap/ic_share_tencent_qq"
            android:gravity="center"

            android:text="QQ"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:drawableTop="@mipmap/ic_share_sina_weibo"
            android:gravity="center"

            android:text="微博"
            android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:drawableTop="@mipmap/ic_share_tencent_qzone"
            android:gravity="center"

            android:text="Qzone"
            android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:drawableTop="@mipmap/ic_share_hyperlink"
            android:gravity="center"

            android:text="复制链接"
            android:textSize="10dp" />

    </LinearLayout>
</LinearLayout>